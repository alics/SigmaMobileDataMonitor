<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zohaltech.app.mobiledatamonitor">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".classes.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.DashboardActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PackagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DailyTrafficMonitorActivity"
            android:screenOrientation="portrait" />

        <receiver android:name=".classes.AlarmReceiver" />
        <receiver android:name=".classes.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".classes.DataUsageUpdateService"/>

    </application>

</manifest>
