<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_main_color">

        <widgets.MyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="مدیریت اینترنت موبایل"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/app_main_color"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <widgets.ArcProgress
                android:id="@+id/progressDay"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="centerInside"/>

            <widgets.MyTextView
                android:id="@+id/txtDayTraffic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="حجم شبانه روزی"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <widgets.ArcProgress
                android:id="@+id/progressNight"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="centerInside"/>

            <widgets.MyTextView
                android:id="@+id/txtNightTraffic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="حجم شبانه"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <widgets.MyButton
                android:id="@+id/btnStartAnimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white_flat"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_custom_packages"
                android:padding="10dp"
                android:text="بسته سفارشی"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <widgets.MyButton
                android:id="@+id/btnPurchasePackage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white_flat"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_purchase_package"
                android:padding="10dp"
                android:text="خرید بسته"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <widgets.MyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white_flat"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_packages_history"
                android:padding="10dp"
                android:text="سوابق بسته ها"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <widgets.MyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white_flat"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_usage_report"
                android:padding="10dp"
                android:text="گزارش مصرف"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>